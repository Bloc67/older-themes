<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<name>Studio002</name>
	<id>blocthemes:bacstudio002</id>
	<type>modification</type>
	<version>1.02</version>

	<install for="2.0 - 2.0.99">
		<redirect url="$scripturl?action=admin;area=blocthemes">Installed!</redirect>
		<require-dir name="Themes" destination="$boarddir" />
		<require-dir name="Sources" destination="$boarddir" />
        <readme type="inline">Installing the theme + BAC (Blocthemes Admin Center)</readme>
		<code>InstallTheme.php</code>
    </install>
	<uninstall for="2.0 - 2.0.99">
		<readme type="inline">Un-installing the theme + BAC (Blocthemes Admin Center). If you have several blocthemes the BAC will be kept.</readme>
		<remove-dir name="$boarddir/Themes/Studio002" />
		<code>InstallTheme.php</code>
    </uninstall>
    <upgrade for="2.0 - 2.0.99" from="1.00">
        <readme type="inline">Updating BAC 1.0 and the theme with some minor changes and bug-fixes.</readme>
		<require-dir name="Themes" destination="$boarddir" />
		<require-dir name="Sources" destination="$boarddir" />
	</upgrade>
    <upgrade for="2.0 - 2.0.99" from="1.01">
        <readme type="inline">Updating BAC 1.0.1 and the theme with some minor changes and bug-fixes.</readme>
		<require-dir name="Themes" destination="$boarddir" />
		<require-dir name="Sources" destination="$boarddir" />
	</upgrade>
</package-info>